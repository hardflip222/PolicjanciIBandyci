<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.piotr.pinzynierska.GamePanelActivity">

    <TextView
        android:id="@+id/gameNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/botyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gameNameTextView"
        android:layout_alignBottom="@+id/gameNameTextView"
        android:layout_alignEnd="@+id/starGameButton"
        android:layout_alignStart="@+id/starGameButton"
        android:background="@drawable/mybutton"
        android:text="Dodaj boty do gry"
        android:textColor="#000000" />

    <Button
        android:id="@+id/starGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rozpocznij grę"
        android:layout_marginTop="24dp"
        android:background="@drawable/mybutton"
        android:textColor="#000000"
        android:layout_below="@+id/gameNameTextView"
        android:layout_alignStart="@+id/stanGryTextView"
        android:layout_alignEnd="@+id/stanGryTextView"
        />

    <Button
        android:id="@+id/losujNacjeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Losuj"
        android:layout_below="@+id/starGameButton"
        android:layout_alignStart="@+id/starGameButton"
        android:layout_alignEnd="@+id/stanGryTextView"
        android:background="@drawable/mybutton"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/stanGryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/losujNacjeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Oczekiwanie na rozpoczęcie gry"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <ListView
        android:id="@+id/playersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stanGryTextView"
        android:layout_marginTop="29dp"
        android:layout_alignParentStart="true" />




</RelativeLayout>
