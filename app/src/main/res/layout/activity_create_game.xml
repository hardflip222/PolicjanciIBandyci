<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.piotr.pinzynierska.CreateGameActivity"
    android:id="@+id/createGameActivity">


    <EditText
        android:id="@+id/nickEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_nick"
        android:ems="10"
        android:hint="Podaj swój nick"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#b2b2b2"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="77dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nickEditText"
        android:layout_below="@+id/nickEditText"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_nazwa"
        android:ems="10"
        android:hint="Podaj nazwe gry"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#b2b2b2"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="155dp" />

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="42dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="hasło"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#b2b2b2"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/createGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="@string/utworz"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/playersNumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:textAlignment="center"
        android:textColor="#b2b2b2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:text="Ilość graczy:"
        android:textColor="#b2b2b2" />

    <Spinner
        android:id="@+id/czasSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="#b2b2b2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playersNumer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Czas gry (minuty):"
        android:textColor="#b2b2b2" />

    <CheckBox
        android:id="@+id/botyChechBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/createGameButton"
        android:layout_alignStart="@+id/createGameButton"
        android:layout_below="@+id/czasSpinner"
        android:layout_marginTop="19dp"
        android:text="Boty"
        android:textColor="#b2b2b2" />

</RelativeLayout>
