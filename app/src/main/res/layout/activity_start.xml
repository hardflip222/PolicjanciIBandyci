<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.piotr.pinzynierska.StartActivity">

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="209dp"
        android:text="@string/utworz"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/joinButton"
        android:layout_alignEnd="@+id/joinButton" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/dolacz"
        android:layout_below="@+id/createButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="#000000"
        />
</RelativeLayout>
